
{
    "name": "daikon/interop",
    "type": "library",
    "description": "Interop components used across Daikon components.",
    "homepage": "https://github.com/daikon-cqrs/interop",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "sebastian/phpcpd": "^4.1",
        "squizlabs/php_codesniffer": "^3.3",
        "vimeo/psalm": "^3.0"
    },
    "autoload": {
        "psr-4": { "Daikon\\Interop\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": { "Daikon\\Tests\\Interop\\": "tests" }
    },
    "archive": {
        "exclude": [
            "/build",
            "/vendor"
        ]
    },
    "scripts": {
        "build": [ "@sniff" ],
        "code-sniffer": "phpcs -p -s --extensions=php --standard='PSR1,PSR2' src",
        "code-sniffer-autofix": "phpcbf --standard=PSR2 -d tabWidth=4 src",
        "copy-paste-detector": "phpcpd src || true",
        "sniff": [
            "@code-sniffer",
            "@copy-paste-detector",
            "@validate-json",
            "psalm"
        ],
        "validate-deps": "composer validate --with-dependencies --strict",
        "validate-json": "composer validate --no-check-all --no-check-lock"
    }
}
